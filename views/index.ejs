<%include partials/header.ejs%>
<div class="ui huge header main text container segment">BLOGSPOT</div>
<div class="ui main text container segment">
<div class="ui top attached ">
<div class="ui divided items">
<%blogs.forEach(function(blog){%>
<div class="item">
		<div class="image">
		<img src="<%= blog.image%>" alt="Error">
	</div>
	<div class="content">
<h1 class="ui header"><%=blog.title %></h1>
<div class="meta">
	<span style="font-family:'Slabo 27px', serif;"><%=blog.created.toDateString()%></span>
</div>
<div class="description">
<p style="font-family:'Slabo 27px', serif;"><%- blog.body%></p>	
</div>	
<div class="extra">
	<a href="/blogs/<%=blog._id%>">Read More</a>
</div>
</div>
</div>
<% });%>
</div>
</div>
</div>
<%include partials/footer.ejs%>
